#!/usr/bin/env zsh

if [ ! -f /usr/bin/sudo ]
then 
  echo 'please install sudo and re-run the script'
  exit 1
fi

# already bootstraped?!
if [ -f $HOME/.arch/bootstrap_done ]
then
  exit 0
fi

# base pkgs
echo 'installing base pkgs \n'
sudo pacman -S --needed --noconfirm \
  base-devel \
  git \
  vim \
  htop \
  mc \
  zsh \
  > /dev/null

echo 'configure user \n'
sudo gpasswd -a $USER wheel

echo 'configure sudo \n'
sudo echo '%wheel ALL=(ALL) ALL' >> /etc/sudoers

# yay
echo 'installing yay \n'
test ! -d $HOME/git/yay \
  && mkdir -p $HOME/git \
  && cd $HOME/git \
  && git clone https://aur.archlinux.org/yay.git > /dev/null \
  && cd yay \
  && makepkg -si --needed --noconfirm > /dev/null \
  && cd $HOME

# window manager & system pkgs
echo 'installing window manager & system pkgs \n'
yay -S --needed --noconfirm \
  i3-gaps \
  alacritty \
  pulseaudio \
  xorg-server \
  polybar \
  feh \
  xorg-xsetroot \
  xorg-xrandr \
  xorg-xinit \
  rofi \
  netctl \
  wifi-menu \
  fstrim \
  bluez \
  bluez-utils \
  > /dev/null

# user pkgs
echo 'installing user pkgs \n'
yay -S --needed --noconfirm \
  nodejs \
  npm \
  hugo \
  podman \
  buildah \
  skopeo \
  google-chrome \
  portfolio-performance-bin \
  ripgrep \
  cmus \
  > /dev/null

echo 'enabling services \n'
sudo sudo systemctl enable bluetooth.service

echo 'bootstrapping shell environment \n'
# regenerate font cache
fc-cache -f > /dev/null

# touch file to signal the successfull bootstrap
touch $HOME/.arch/bootstrap_done
